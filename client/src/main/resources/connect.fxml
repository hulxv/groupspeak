<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #121212;" styleClass="root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.HelloController">
    <children>

        <VBox alignment="CENTER" spacing="15.0" AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="80.0">
            <children>

                <VBox alignment="TOP_LEFT" maxWidth="240.0" prefWidth="240.0" spacing="10.0">
                    <children>
                  <HBox prefHeight="13.0" prefWidth="240.0">
                     <children>
                        <Label fx:id="IP_label" textFill="#fff8e7">
                           <font>
                              <Font name="Arial Bold" size="18.0" />
                           </font>
                        </Label>
                              <Label text="IP" textFill="#fff8e7">
                                  <font>
                                      <Font name="Arial Bold" size="18.0" />
                                  </font>
                              </Label>
                     </children>
                  </HBox>
                        <TextField fx:id="IP_text" alignment="CENTER" maxWidth="240.0" prefWidth="240.0" style="-fx-background-color: #222225; -fx-text-fill: #fff8e7; -fx-background-radius: 8;" styleClass="search-field" />
                    </children>
                </VBox>

                <VBox alignment="TOP_LEFT" maxWidth="240.0" prefWidth="240.0" spacing="10.0">
                    <children>
                  <HBox prefHeight="10.0" prefWidth="240.0">
                     <children>
                              <Label text="Port" textFill="#fff8e7">
                                  <font>
                                      <Font name="Arial Bold" size="18.0" />
                                  </font>
                           <graphic>
                              <Label fx:id="Port_label" textFill="#fff8e7">
                                 <font>
                                    <Font name="Arial Bold" size="18.0" />
                                 </font>
                              </Label>
                           </graphic>
                              </Label>
                     </children>
                  </HBox>
                        <TextField fx:id="Port_text" alignment="CENTER" maxWidth="240.0" prefHeight="26.0" prefWidth="240.0" style="-fx-background-color: #222225; -fx-text-fill: #fff8e7; -fx-background-radius: 8;" styleClass="search-field" />
                    </children>
                </VBox>

                <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" spacing="20.0">
                    <children>
                        <Button fx:id="Connect" mnemonicParsing="false" onAction="#switchtohome" prefWidth="110.0" style="-fx-background-color: #222225; -fx-background-radius: 15;" styleClass="send-btn" text="Connect" textFill="#fff8e7">
                            <font>
                                <Font size="15.0" />
                            </font>
                        </Button>
                    </children>
                    <padding>
                        <Insets top="20.0" />
                    </padding>
                </HBox>

            </children>
        </VBox>
    </children>
</AnchorPane>
